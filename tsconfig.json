{
  "compilerOptions": {
    "types": ["@testing-library/jest-dom"],
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@dalydb/sdesign": ["src"],
      "@dalydb/sdesign/*": ["src/*", "*"]
    }
  },
  "include": [
    ".dumirc.ts",
    "src/**/*",
    "global.d.ts",
    "docs/**/*",
    "tests/**/*"
  ],
  "exclude": ["**/*.md"]
}
